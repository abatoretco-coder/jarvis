{
  "name": "jarvis",
  "version": "0.1.0",
  "private": true,
  "description": "Jarvis - minimal command router service with Home Assistant integration",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "docker:build": "docker build -t jarvis:local .",
    "docker:push": "node ./scripts/docker-push.mjs"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "fastify": "^4.28.1",
    "pino": "^9.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "5.5.4",
    "vitest": "^2.1.8"
  }
}
