# Server
PORT=8080
LOG_LEVEL=info
BODY_LIMIT_BYTES=1048576

# Optional API auth (disabled by default)
REQUIRE_API_KEY=false
# API_KEY=replace-with-a-long-random-string

# Execution mode
# - false (recommended for VM400->VM300): Jarvis only returns a codified action plan
# - true: Jarvis executes supported actions (currently Home Assistant service calls)
EXECUTE_ACTIONS=false

# CORS (disabled by default)
ALLOW_CORS=false
# CORS_ORIGIN=http://localhost:3000

# Home Assistant
HA_BASE_URL=http://homeassistant:8123
HA_TOKEN=REPLACE_WITH_LONG_LIVED_ACCESS_TOKEN
HA_TIMEOUT_MS=10000

# Optional: alias mapping for natural commands -> entity_id
# Example:
# HA_ENTITY_ALIASES_JSON={"kitchen light":"light.kitchen","salon light":"light.living_room"}
HA_ENTITY_ALIASES_JSON=

# Optional build metadata (set by Docker build)
BUILD_SHA=
BUILD_TIME=

# Optional: LLM orchestrator (fallback only)
# If OPENAI_API_KEY is set, unknown commands can be handled as chat or rewritten into a known Jarvis command.
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini
# OPENAI_BASE_URL=https://api.openai.com
OPENAI_TIMEOUT_MS=20000

# Conversation memory (24h sliding window)
# Requires a writable directory (see docker-compose volumes).
MEMORY_DIR=/app/data/memory
MEMORY_TTL_HOURS=24
MEMORY_MAX_MESSAGES=40
